<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="APPCLIENTEPRUEBA1.Views.GenerarView"
             xmlns:vm="clr-namespace:APPCLIENTEPRUEBA1.Models.ViewModels"
             >

    <ContentPage.BindingContext>
        <vm:TicketViewModel></vm:TicketViewModel>
    </ContentPage.BindingContext>
    
    <VerticalStackLayout>
        <Label>Generar Ticket</Label>
        <Label>Cajas:</Label>
        <Picker ItemsSource="{Binding ListaCajas}" x:Name="idCAJA" ItemDisplayBinding="{Binding NombreCaja}" SelectedItem="{Binding Caja,Mode=TwoWay}"></Picker>
        <Button Text="GENERAR TURNO" Margin="0,20,0,20" Command="{Binding GenerarCommand}"></Button>
        <Button Text="ABANDONAR FILA"></Button>

        <Label Text="{Binding Turno.IdTurno}"></Label>
        <Label Text="{Binding Turno.EstadoTurno}"></Label>

    </VerticalStackLayout>
</ContentPage>