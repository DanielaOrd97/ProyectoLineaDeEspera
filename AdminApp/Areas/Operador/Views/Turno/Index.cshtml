@model AdminApp.Models.ViewModels.TurnoViewModel1


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/css/Style.css" />
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <title>Cajero</title>
</head>
<body class="BodyCajero">
    <nav class="navbar">
        <h1 class="navbar-logo">BancoTec</h1>
        <h1 class="navbar-username"><i class="fas fa-user"></i>@Model.NombreCaja</h1>
        <div class="logout">
            <a href="~/Operador/Turno/Logout"><i class="fas fa-sign-out-alt"></i> Cerrar Sesión</a>
        </div>
    </nav>
    <div class="content">
        <div class="attendance">
            <div class="attendance-list">
                <div class="form-group">
                    <div class="half-width">
                        <label>Estado turno:</label>
                        <label>@Model.EstadoTurno</label>
                        <p class="label">Turno:</p>
                        <p class="codigo"><i id="user" class="fas fa-user"></i>@Model.IdTurno</p>

                    </div>
                    <div class="turno">
                          </div>
                </div>
            <div class="buttons">
                <a class="action-button cancelar" href="~/Operador/Turno/CancelarTurno/@Model.IdTurno">Cancelar</a>
                <a class="action-button" href="~/Operador/Turno/AtrasarTurno">Anterior</a>
                <a class="action-button" href="~/Operador/Turno/LlamarCliente/@Model.IdTurno">Llamar</a>
                <a class="action-button" href="~/Operador/Turno/AtenderCliente/@Model.IdTurno">Atender</a>
                <a class="action-button" href="~/Operador/Turno/TerminarAtencion/@Model.IdTurno">Terminar</a>
                <a class="action-button" href="~/Operador/Turno/AvanzarTurno">Siguiente</a>
            </div>
            </div>
        </div>
    </div>
</body>

</html>
